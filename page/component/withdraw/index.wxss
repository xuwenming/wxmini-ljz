
.container {
  margin-bottom: 120rpx;
  margin-top: 130rpx;
}

.header-container {
  background-color: #05C0AB;
}
.header-container .header-name {
  color: #fff;
}

.iphone {
  margin-top: 180rpx;
}

form{
    width:100%;
    height: 140px;
    background-color: #fff;
}
.row-wrap{
    width:90%;
    line-height:88rpx;
    font-size:28rpx;
    margin-left:20px;
}
.row-wrap .label{
    width:100%;
    color:#666;
    font-size:26rpx;
}
.row-wrap .label text{
    color:#999;
    font-size:24rpx;
}

.lable-amount{
    float:left;
    font-size:50rpx;
    margin-right:11px;
    color:#333;
}
.lable-text{
    color:#999;
    font-size:24rpx;
    margin:-5px 0;
    float:left;
    margin-bottom:15px;
}
.label-all {
  color:#05C0AB;
  font-size:26rpx;
  margin-left: 20rpx;
}
.row-wrap .label-right{
    height:88rpx;
    line-height:88rpx;
    border-bottom:1px solid #f5f5f5;
}
.row-wrap .label-right input{
    height:100%;
    font-size:70rpx;
    float:left;
    margin:-5px 0;
    width:80%;
    padding:5px 0;
    color:#333;
}
.row-wrap .right-box{
    margin-right: 30rpx; 
}
.arrow-right{
    width: 15rpx;
    height: 24rpx;
}
.save-btn,
.cancel-btn{
    width: 690rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    margin-top:30rpx; 
    border-radius: 6rpx;
    box-sizing: border-box;
}
.save-btn{
    background-color: #05C0AB;
    color:#fff;
    font-size: 30rpx;
}
button[type="default"]{
    background-color: #ffffff;
    color:#000;
    font-size: 30rpx;
}
.addr-details{
    height: auto;
    padding: 30rpx 0;
    margin-left:30rpx;
    border-bottom: 1rpx solid #eee;
    display: flex;
    font-size: 28rpx;
}
.addr-details .label{
    margin:auto 0 auto 0;
    width: 160rpx;
    color: #000
}
.addr-details textarea{
    box-sizing: border-box;
    width: 480rpx;
    overflow: scroll;
}
picker {
    min-width: 20rpx;
    height: 100%;
    margin-right: 20rpx;
}
.hui{
    color: #777;
}

.row-wrap-1 {
  width: 690rpx;
  height: 88rpx;
  line-height: 88rpx;
  margin-left: 30rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  font-size: 28rpx;
  /*justify-content: space-between;*/
}

.row-wrap-1 .label {
  width: 160rpx;
  color: #000;
}

.row-wrap-1 .label-right {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
}

.row-wrap-1 .label-right input {
  height: 100%;
  font-size: 28rpx;
  padding-right: 30rpx;
}

.row-wrap-1 .right-box {
  margin-right: 30rpx;
}