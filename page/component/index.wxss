page{
    background-color: #eee;
}

.container {
    padding-bottom: 100rpx;
    margin-top: 130rpx;
}

.header-container {
	background-color: #05C0AB;
}
.header-container .header-name {
	color: #fff;
}

.iphone {
  margin-top: 180rpx;
}

.swiper-container {
  width: 100%;
  position: relative;
  background-color: #f9f9f9;
}

.swiper_box {
  width: 100%;
  height: 400rpx;
}

swiper-item image{
  width: 100%;
  display: inline-block;
  overflow: hidden;
  height: 100%;
}

.swiper-container .dots {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 20rpx;
  display: flex;
  justify-content: center;
}

.swiper-container .dots .dot {
  margin: 0 8rpx;
  width: 20rpx;
  height: 8rpx;
  background: #fff;
  border-radius: 2rpx;
  transition: all 0.6s;
  opacity: 0.5;
}

.swiper-container .dots .dot.active {
  opacity: 0.9;
}

.goods{
    margin-bottom: 20rpx;
    background-color: #fff;
    padding: 24rpx;
}

.goods .title{
    overflow : hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    line-height: 40rpx;
    max-height: 80rpx;
}

.goods .price{
    color: #b5272d;
    font-size: 34rpx;
    max-width: 160rpx;
    min-width: 160rpx;
    line-height: 40rpx;
}

.draw{
    background-color: #fff;
    margin-bottom: 10px;
}

.draw .title{
    height: 80rpx;
    position: relative;
    padding: 0 24rpx;
    margin-bottom: 24rpx;
}

.draw .title view{
    max-width: 50%;
    min-width: 50%;
    font-size: 30rpx;
}

.draw .title view:last-child{
    font-size:24rpx;
}

.draw .item{
    padding: 0 24rpx 24rpx 24rpx;
}

.draw .item .avatar image{
    display: block;
    max-width: 100rpx;
    min-width: 100rpx;
    border-radius: 50%;
    height: 100rpx;
}

.draw .item .avatar view{
    padding-left: 20rpx;
}

.draw .item .text{
    color: #999
}

.share-log{
  margin-bottom:100rpx;
}

.footer-box {
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  box-shadow: 0rpx 15rpx 15rpx 10rpx;
  z-index: 99999;
}

.box-list {
  width: 20%;
  border-right: 1px solid #f2f2f2;
  font-size: 30rpx;
  line-height: 44rpx;
  text-align: center;
}

.box-list .npx {
  height: 100rpx;
  line-height: 100rpx;
}

.box-list image {
  width: 50rpx;
  height: 50rpx;
  display: block;
  margin: 0 auto;
}

.box-title {
  width: 40%;
  font-size: 30rpx;
  line-height: 44rpx;
  text-align: center;
}

.box-title .boxshop-yuan {
  margin-top: 10rpx;
}

.box-title .npx {
  height: 100rpx;
  line-height: 100rpx;
}

.buy-shop-cart {
  background-color: #05C0AB;
  color: #fff;
}

.buy-now {
  background-color: #b5272d;
  color: #fff;
}

.show-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.3);
  z-index: 99999999999;
}

.show-container .show-box {
  width: 70%;
  margin: 0 auto;
  height: 600rpx;
  background-color: #fff;
  margin-top: 40%;
  border-radius: 10rpx;
}

.show-logo-box {
  text-align: center;
  width: 80%;
  border-bottom: 1px solid #f5f5f5;
  margin: 0 auto;
  padding-top: 20px;
}

.show-logo-box image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  display: block;
  margin: 0 auto;
}

.show-mall-name {
  font-size: 32rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  color: #333;
}

.show-text-box {
  margin-top: 20rpx;
  margin-bottom: 40rpx;
}

.show-text-name {
  font-size: 30rpx;
  color: #333;
  width: 80%;
  margin: 0 auto;
}

.show-text-info {
  width: 80%;
  margin: 0 auto;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.show-text-info text {
  margin-right: 10rpx;
  font-size: 26rpx;
}

.show-box button::after {
  border-radius: 4rpx;
  border: 0;
}

.show-box button {
  width: 80%;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 30rpx;
  background-color: #04be01;
  color: #fff;
}

.newcoupons-hover {
  position: fixed;
  bottom: 20rpx;
  right: 20rpx;
  width: 150rpx;
  height: 150rpx;
  transition: all 0.6s;
}

.modal-box {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0px;
  background: rgba(255, 255, 255, 0.8);
  overflow: hidden;
  z-index: 9999999;
}

.modal-body {
  width: 100%;
  height: 100%;
  text-align: center;
}

.modal-content {
  z-index: 999;
  margin-top: 40%;
}

.fenxiang {
  width: 70%;
  border-radius: 4px;
  transition: all 0.6s;
}

.knowBtnImg {
  width: 30px;
  height: 30px;
  display: block;
  margin: auto;
  margin-top: 10px;
}
.amount{
  color: #b5272d;
  padding-left: 4rpx; 
  font-size: 30rpx;
}